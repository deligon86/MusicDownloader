<SettingsView>:
    AutoCustomThemeCard:
        is_parent_widget: True

        MDScrollView:
            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 8

                AutoCustomThemeCard:
                    is_button_widget: True
                    size_hint_y: None
                    height: "350dp"
                    radius: 8
                    padding: 10
                    orientation: "vertical"
                    CommonLabel:
                        size_hint_y: None
                        height: '48dp'
                        text: "Theme and Font Options"
                        is_header: True

                    MDBoxLayout:
                        # themes
                        orientation: "vertical"
                        CommonLabel:
                            size_hint_y: None
                            height: '48dp'
                            text: "Theme"
                            sub_header: True
                        MDBoxLayout:
                            spacing: 10
                            size_hint_x: .7
                            pos_hint: {"center_x": .5, "center_y": .5}
                            ThemeButton:
                                theme: "Light"
                            ThemeButton:
                                theme: "Dark"
                            ThemeButton:
                                theme: "Black"

                    MDBoxLayout:
                        # accent color
                        MDScrollView:
                            MDBoxLayout:
                                size_hint_x: None
                                width: self.minimum_width
                                id: accent_cont
                                spacing: 5

                    MDBoxLayout:
                        # fonts
                        orientation: "vertical"
                        CommonLabel:
                            size_hint_y: None
                            height: '48dp'
                            sub_header: True
                            text: "Font options"
                        MDBoxLayout:
                            SwitchOptionItem:
                                option: 'font_bold'
                                text: "Make all text bold"

                AutoCustomThemeCard:
                    is_button_widget: True
                    size_hint_y: None
                    height: "250dp"
                    radius: 8

                AutoCustomThemeCard:
                    is_button_widget: True
                    size_hint_y: None
                    height: "250dp"
                    radius: 8
